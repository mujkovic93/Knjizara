<Window x:Class="WpfApp15.Izmena"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp15"
        mc:Ignorable="d"
        Title="Izmena" Height="450" Width="800">
    <Window.BindingGroup>
        <BindingGroup/>
    </Window.BindingGroup>
    <UniformGrid Columns="2">
        <Label Content="Ime:" FontSize="42"/>
        <TextBox Name="txtNaziv" Text="{Binding Ime, UpdateSourceTrigger=Explicit}"  FontSize="42"/>
        <Label Content="Prezime:" FontSize="42"/>
        <TextBox Text="{Binding Prezime, UpdateSourceTrigger=Explicit}" FontSize="42"/>
        <Label Content="Mail:" FontSize="42"/>
        <TextBox Text="{Binding Mail, UpdateSourceTrigger=Explicit}" FontSize="42"/>
        <Label Content="Adresa stanovanja:" FontSize="42"/>
        <TextBox Text="{Binding Adresa_stanovanja, UpdateSourceTrigger=Explicit}" FontSize="42"/>
        <Button Content="Odustani" Name="odustani" Click="odustani_Click"	 FontSize="42"/>
        <Button Content="OK" Name="ok" Click="ok_Click"	 FontSize="42"/>
    </UniformGrid>

</Window>
